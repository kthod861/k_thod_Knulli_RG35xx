
<theme>
  <formatVersion>7</formatVersion>

  <variables>
    <mainColor>4075F9</mainColor>
    <onMainColor>1D1B16</onMainColor>
    <bgColor>1D1B16</bgColor>
    <sectColor>94A0FF</sectColor>
    <fgColor>FFFFFF</fgColor>
  </variables>


  <view name="system,grid">
	<helpsystem name="help">
		<textColor>${fgColor}</textColor>
		<iconColor>${sectColor}</iconColor>
		<pos>10 10</pos>
	</helpsystem>

  </view>


  <view name="menu">
    <menuText name="menutext">
      <selectedColor>${onMainColor}</selectedColor>
      <selectorColor>${mainColor}</selectorColor>
      <color>${fgColor}</color>
      <separatorColor>${fgColor}${percent.5}</separatorColor>
    </menuText>

    <menuTextSmall name="menutextsmall">
      <color>${sectColor}</color>
    </menuTextSmall>

    <menuGroup name="menugroup">
      <color>${sectColor}</color>
      <separatorColor>${sectColor}${percent.60}</separatorColor>
      <backgroundColor>${sectColor}${percent.10}</backgroundColor>
    </menuGroup>

    <menuBackground name="menubg">
      <color>${bgColor}</color>
    </menuBackground>

    <menuText name="menufooter">
      <color>${fgColor}${percent.80}</color>
    </menuText>

    <menuText name="menutitle">
      <color>${fgColor}</color>
    </menuText>

    <menuTextEdit name="menutextedit">
      <inactive>./../systems/input_inactive-dark.svg</inactive>
      <active>./../systems/input_active-dark.svg</active>
    </menuTextEdit>
  </view>



  <!-- Carousel Config -->
  <view name="system">
    <carousel name="systemcarousel">
      <color>${bgColor}00</color>
    </carousel>

    <!-- System Name -->
    <text name="systemName">
      <color>${fgColor}${percent.90}</color>
      <glowColor>${bgColor}${percent.10}</glowColor>
      <glowSize>1</glowSize>
    </text>

    <!-- Total games per system -->
    <text name="systemInfo">
      <color>${fgColor}${percent.90}</color>
      <glowColor>${bgColor}${percent.10}</glowColor>
      <glowSize>1</glowSize>
    </text>

    <!-- System Background -->
    <image name="cover_fallback" extra="true">
      <color>${bgColor}</color>
    </image>

    <image name="custom_bg_fg" extra="true">
      <color>${bgColor}</color>
    </image>

    <text name="logoText">
      <color>${fgColor}</color>
      <glowColor>${mainColor}${percent.10}</glowColor>
      <glowSize>1</glowSize>
    </text>
  </view>

  <view name="system, grid">
    <image name="osdBackground" extra="true">
      <color>000000</color>
    </image>
  </view>


  <view name="screen">
    <batteryIndicator name="batteryIndicator">
      <color>FFFFFF</color>
    </batteryIndicator>

	<controllerActivity name="controllerActivity">
		<visible>false</visible>
	</controllerActivity>
  </view>
</theme>
