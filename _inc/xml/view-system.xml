<theme>
  <formatVersion>7</formatVersion>
	<variables>
		<bgColor>000000</bgColor>
		<bgOpacity>0.7</bgOpacity>
		<glowColor>Ab000020</glowColor>
		<systemInfoColor>DDDDDDD8</systemInfoColor>
		<fontRegular>./_inc/fonts/Inter-Regular.otf</fontRegular>
	</variables>
	<view name="system,grid">
		<!-- Background-->
		<image name="background_color" extra="true">
			<path>./_inc/systems/artwork/${system.theme}.jpg</path>
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>1 1</size>
			<opacity>${bgOpacity}</opacity>
			<zIndex>2</zIndex>
		</image>
		<!-- Overlay-->
		<image name="custom_bg_fg" extra="true">
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>1 1</size>
			<path>./_inc/images/carousel-background.png</path>
			<color>000000</color>
			<opacity>1</opacity>
			<zIndex>3</zIndex>
		</image>
	</view>
	
	
	<view name="system">
		<image name="lines" extra="static">
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>1 1</size>
			<path>./_inc/images/Lines.png</path>
			<!--<opacity>${bgOpacity}</opacity>-->
			<color>838383</color>
			<zIndex>200</zIndex>
		</image>

		<!-- System view Logos overides-->
		<image name="logo">
			<path>./_inc/systems/logos/${system.theme}.png</path>
			<reflexion>0.3 0.0</reflexion>
		</image>
		<!-- System view Infos-->
		<text name="systemInfo">
			<origin>0 0</origin>
			<pos>-0.43 0.41</pos>
			<size>1 0.22</size>
			<backgroundColor>00000000</backgroundColor>
			<color>ADADAD</color>
			<fontPath>${fontRegular}</fontPath>
			<fontSize>0.02</fontSize>
			<letterCase>capitalize</letterCase>
		</text>
		
		<!-- System view Carroussel overides-->
		<carousel name="systemcarousel">
			<origin>0 0</origin>
			<pos>0 0.43</pos>
			<size>1 0.55</size>
			<color>00000000</color>
			<itemScale>1.80</itemScale>
			<!--			<unfocusedItemDimming>0.5</unfocusedItemDimming>-->
			<minLogoOpacity>0.25</minLogoOpacity>
			<logoScale>2</logoScale>
			<transitionSpeed>1200</transitionSpeed>
			<systemInfoDelay>0</systemInfoDelay>
			<scaledLogoSpacing>0.4</scaledLogoSpacing>
		</carousel>

	</view>
</theme>