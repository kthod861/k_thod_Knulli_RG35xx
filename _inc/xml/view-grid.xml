<theme>
	<formatVersion>7</formatVersion>
	
	<view name="grid">
		<!-- white lines -->
		<image name="lines" extra="static">
			<origin>0 0</origin>
			<pos>0 -.72</pos>
			<size>1 1</size>
			<path>./_inc/images/Lines.png</path>
			<zIndex>200</zIndex>
		</image>
		<!-- System logo -->
		<image name="logo">
			<pos>0.4 0.02</pos>
			<origin>0 0</origin>
			<horizontalAlignment>center</horizontalAlignment>
			<verticalAlignment>center</verticalAlignment>
			<scale>0.3 </scale>
			<maxSize>0.8 0.3</maxSize>
			<path>./_inc/systems/logos/${system.theme}.png</path>
			<zIndex>10</zIndex>
			<reflexion>0.3 0.1</reflexion>
			<linearSmooth>true</linearSmooth>
		</image>
		<!-- game name-->
		<text name="md_name">
			<fontSize>0.025</fontSize>
			<fontPath>${fontRegular}</fontPath>
			<pos>0.03 0.10</pos>
			<origin>0 0.5</origin>
			<size>0.7 ${fontSizeBody-small}</size>
			<alignment>left</alignment>
			<singleLineScroll>true</singleLineScroll>
			<color>${fgColor}</color>
			<zIndex>5000</zIndex>
			<w>0.35</w>
			<autoScroll>horizontal</autoScroll>
			<autoScrollDelay>0.01</autoScrollDelay>
		</text>
		<!-- release date-->
		<datetime name="md_releasedate">
			<pos>0.03 0.065</pos>
			<origin>0 0.5</origin>
			<size>0.1 0.035</size>
			<format>%Y</format>
			<color>dddddd</color>
			<forceUppercase>0</forceUppercase>
			<alignment>left</alignment>
			<fontSize>0.025</fontSize>
			<value>...</value>
			<zIndex>4000</zIndex>
		</datetime>
		<!-- rating-->
		<rating name="md_rating">
			<pos>0.08 0.065</pos>
			<origin>0 0.5</origin>
			<size>0.05 0.03</size>
			<color>FFFF00</color>
			<unfilledColor>808080</unfilledColor>
			<unfilledPath>:/star_filled.svg</unfilledPath>
			<horizontalAlignment>left</horizontalAlignment>
			<zIndex>15</zIndex>
		</rating>
		<!-- play time -->
		<text name="md_lbl_gametime">
			<pos>0.7 0.05</pos>
			<origin>0 0.5</origin>
			<size>0.11 0.035</size>
			<color>dddddd</color>
			<forceUppercase>0</forceUppercase>
			<alignment>left</alignment>
			<fontSize>0.025</fontSize>
			<zIndex>4000</zIndex>
		</text>
		<text name="md_gametime">
			<pos>0.82 0.05</pos>
			<origin>0 0.5</origin>
			<size>0.11 0.035</size>
			<color>dddddd</color>
			<forceUppercase>0</forceUppercase>
			<alignment>left</alignment>
			<fontSize>0.025</fontSize>
			<zIndex>4000</zIndex>
		</text>
		<!-- last played-->
		<text name="md_lbl_lastplayed">
			<pos>0.7 0.10</pos>
			<origin>0 0.5</origin>
			<size>0.11 0.035</size>
			<color>dddddd</color>
			<forceUppercase>0</forceUppercase>
			<alignment>left</alignment>
			<fontSize>0.025</fontSize>
			<zIndex>4000</zIndex>
		</text>		
		<datetime name="md_lastplayed">
			<pos>0.82 0.10</pos>
			<origin>0 0.5</origin>
			<size>0.11 0.035</size>
			<color>dddddd</color>
			<forceUppercase>0</forceUppercase>
			<alignment>left</alignment>
			<fontSize>0.025</fontSize>
			<zIndex>4000</zIndex>
		</datetime>


		<!-- Background-->
		<image name="background_color" extra="true">
			<path>./_inc/systems/artwork/${system.theme}.jpg</path>
			<origin>0 0</origin>
			<pos>0 .20</pos>
			<size>1 1</size>
			<opacity>0.4</opacity>
			<zIndex>2</zIndex>
		</image>

		<!--actual game grid -->
		<imagegrid name="gamegrid"
			zIndex="1001"
			pos="0.015 0.15"
			size="${v.gamelistGrid.size}"
			margin="0.02 0.02"
			padding="0.02 0.02 0.02 0.02"
			autoLayout="${v.gridAutoLayout}"
			animateSelection="true"
			centerSelection="false"
			scrollbarColor="${c.textHeader}"
			scrollbarSize="${v.ScrollBar}"
			autoLayoutSelectedZoom="1.15"
			scrollbarAlignment="right"
			imageSource="thumbnail"
			scrollSound="./../systems/scroll.wav"
			scrollDirection="horizontal"
		/>
		
		<!-- each game -->
		<gridtile name="default"
			backgroundColor="00000000"
			backgroundEdgeColor="00000000"
			backgroundCenterColor="00000000"
			backgroundCornerSize="9 9"
			selectionMode="image"
			imageSizeMode="maxSize"
			padding="2 2"
			imageColor="ffffff"
		/>
		<!-- each game name hidden-->
		<text name="gridtile"
			fontPath="./../fonts/${fontRegular}"
			fontSize="0.01"
			color="${c.text}"
			extraTextColor="${c.textHeader}"
			alignment="center"
			singleLineScroll="true"
			autoScrollDelay="0"
		>
			<visible>false</visible>
		</text>
		
		<!-- selected behavior-->
		<gridtile name="selected"
			backgroundCenterColor="ffffff59"
			backgroundEdgeColor="ffffff59"
			imageColor="ffffff"
			
		/>

		<image name="gridtile.image"
			linearSmooth="true"
			roundCorners="0.03"
			
		/>
		<!-- favorites -->
		<image name="gridtile.favorite"
			path="./../images/favorite.png"
			pos="0.2 0.2"
			maxSize="0.2 0.2"
			origin="0.5 0.5"
			horizontalAlignment="left"
			verticalAlignment="top"
			>
			<reflexion>0.7 0.5</reflexion>
		</image>
		<!-- default cartridge -->
		<imagegrid name="gamegrid">
			<gameImage>./../systems/icons/cartridge-dark.png</gameImage>
			<folderImage>./../systems/icons/folder-dark.png</folderImage>
		</imagegrid>
	</view>

</theme>
