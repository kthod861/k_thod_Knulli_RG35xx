<?xml version="1.0" encoding="UTF-8"?>

<theme>

	<formatVersion>7</formatVersion>
	
	<view name="grid">
		<!-- game name-->
		<text name="md_name">
		  <fontSize>0.025</fontSize>
		  <fontPath>${fontRegular}</fontPath>
		  <pos>0.033333 0.13</pos>      <!--480x320 / 16x 44y-->
		  <origin>0 0.5</origin>      <!--vertical center-->
		  <size>0.7 ${fontSizeBody-medium}</size>
		  <alignment>left</alignment>
		  <zIndex>5000</zIndex>
		</text>
		

		<!--actual game grid -->
		<imagegrid name="gamegrid"
			zIndex="1001"
			pos="0.025 0.15"
			size="${v.gamelistGrid.size}"
			margin="0.02 0.02"
			padding="0.02 0.02 0.02 0.02"
			autoLayout="${v.gridAutoLayout}"
			animateSelection="true"
			centerSelection="false"
			scrollbarColor="${c.textHeader}"
			scrollbarSize="${v.ScrollBar}"
			autoLayoutSelectedZoom="1.2"
			scrollbarAlignment="right"
			imageSource="thumbnail"
			scrollSound="./../systems/scroll.wav"
		/>
		
		<!-- each game -->
		<gridtile name="default"
		
			backgroundColor="00000000"
			backgroundEdgeColor="00000000"
			backgroundCenterColor="00000000"
			backgroundCornerSize="9 9"
			selectionMode="image"
			imageSizeMode="maxSize"
			padding="6 6"
			imageColor="ffffff"
			reflexion="0 0"
			
		/>
		<!-- each game name hidden-->
		<text name="gridtile"
			fontPath="./../fonts/${f.def}"
			fontSize="0.01"
			color="${c.text}"
			extraTextColor="${c.textHeader}"
			alignment="center"
			singleLineScroll="true"
			autoScrollDelay="0"
		>
			<visible ifSubset="gridGameName:no">false</visible>
		</text>



		<image name="gridtile.image"
			linearSmooth="true"
			roundCorners="0.08"
			
		/>
	</view>

</theme>
