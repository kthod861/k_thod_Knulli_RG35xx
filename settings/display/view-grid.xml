<?xml version="1.0" encoding="UTF-8"?>

<theme>

	<variables>
		<v.themeVersion>2.15.1</v.themeVersion>

		<c.frame>161616</c.frame>
		<c.base>121212</c.base>
		<c.scroll>808080</c.scroll>
		<c.menubg>162224</c.menubg>
		<c.textHeader>CACA6E</c.textHeader>
		<c.main>4e97d1</c.main>
		<c.menuSelector>52611B</c.menuSelector>
		<ce.menuSelector>CACA6E</ce.menuSelector>

		<v.line.hc>1 / ${screen.height}</v.line.hc>
		<v.line.h>2 / ${screen.height}</v.line.h>
		<v.line.w>2 / ${screen.width}</v.line.w>
		<v.line4.w>4 / ${screen.width}</v.line4.w>

		<v.lineScroll>1 / ${screen.width}</v.lineScroll>

		<v.frame.x>0.5</v.frame.x>
		<v.frameLeft.x>0.22</v.frameLeft.x>
		<v.frameRight.x>0.705</v.frameRight.x>

		<v.frame.y>0.53</v.frame.y>

		<v.frame.w>0.95</v.frame.w>
		<v.frameLeft.w>0.39</v.frameLeft.w>
		<v.frameRight.w>0.54</v.frameRight.w>

		<v.frame.h>0.90</v.frame.h>

		<v.frameBorders.w>0.95 + (${v.line.w})</v.frameBorders.w>
		<v.frameLeftBorders.w>0.39 + (${v.line.w})</v.frameLeftBorders.w>
		<v.frameRightBorders.w>0.54 + (${v.line.w})</v.frameRightBorders.w>

		<v.frameBorders.h>0.90 + (${v.line.h})</v.frameBorders.h>

		<v.frame.size>${v.frame.w} ${v.frame.h}</v.frame.size>
		<v.frameLeft.size>${v.frameLeft.w} ${v.frame.h}</v.frameLeft.size>
		<v.frameRight.size>${v.frameRight.w} ${v.frame.h}</v.frameRight.size>

		<v.frame.pos>${v.frame.x} ${v.frame.y}</v.frame.pos>
		<v.frameLeft.pos>${v.frameLeft.x} ${v.frame.y}</v.frameLeft.pos>
		<v.frameRight.pos>${v.frameRight.x} ${v.frame.y}</v.frameRight.pos>

		<v.frameBorders.size>${v.frameBorders.w} ${v.frameBorders.h}</v.frameBorders.size>
		<v.frameLeftBorders.size>${v.frameLeftBorders.w} ${v.frameBorders.h}</v.frameLeftBorders.size>
		<v.frameRightBorders.size>${v.frameRightBorders.w} ${v.frameBorders.h}</v.frameRightBorders.size>

		<v.gamelist.fontSize>0.024</v.gamelist.fontSize>

		<v.gamelistDetailed.size>0.39 0.90</v.gamelistDetailed.size>

		<v.gamelistBasic.size>0.95 0.90</v.gamelistBasic.size>

		<v.gamelistGrid.size>0.95 0.90</v.gamelistGrid.size>

		<v.gameDescription.size>0.160</v.gameDescription.size>

		<v.playTime.size>0.100</v.playTime.size>

		<v.video.pos>0.705 0.70</v.video.pos>

		<v.marqueeMax.size>0.50 0.12</v.marqueeMax.size>

		<c.text>ffffff</c.text>
		<c.selected>000000</c.selected>
		<c.glowColor>0000004d</c.glowColor>

		<v.lines>12</v.lines>

		<v.gamecounttext>0 0.92</v.gamecounttext>

		<v.gridAutoLayout if="${screen.width} &lt;= '641'">3 2</v.gridAutoLayout>
		<v.gridAutoLayout if="${screen.width} &gt; '641' &amp;&amp; ${screen.width} &lt;= '721'">3 3</v.gridAutoLayout>
		<v.gridAutoLayout if="${screen.width} &gt; '721' &amp;&amp; ${screen.width} &lt;= '1281'">4 2</v.gridAutoLayout>
		<v.gridAutoLayout if="${screen.width} &gt; '1281'">5 3</v.gridAutoLayout>


		<v.ScrollBar>0.0035</v.ScrollBar>
		<v.ScrollBar2>0.0045</v.ScrollBar2>
		
		<f.def>ubuntu.ttf</f.def>
	</variables>

	<formatVersion>7</formatVersion>
	
	<view name="grid">

		<image name="logo"
		
			zIndex="601"
			linearSmooth="false"
			origin="0.5 0.5"
			maxSize="${v.frame.size}"
			pos="${v.frame.pos}"
			saturation="0.75"
			color="${c.textHeader}15"
			colorEnd="80808080"

		>

			<visible>false</visible>

		</image>

		<image name="frame"
		
			extra="true"
			zIndex="600"
			path="./../parts/white.png"
			origin="0.5 0.5"
			size="${v.frame.size}"
			pos="${v.frame.pos}"
			color="${c.frame}80"
			
		/>

		<image name="frameBorders"
		
			extra="true"
			zIndex="599"
			path="./../parts/white.png"
			origin="0.5 0.5"
			size="${v.frameBorders.size}"
			pos="${v.frame.pos}"
			color="${c.main}33"
			
		/>
			
		<image name="frameShadow"
		
			extra="true"
			linearSmooth="true"
			zIndex="598"
			path="./../parts/frameShadow.png"
			origin="0.5 0.5"
			pos="0.5 0.5"
			size="1 1"
			color="${c.glowColor}"
			opacity="0.5"
			
		/>

		<imagegrid name="gamegrid"
		
			zIndex="1001"
			pos="0.025 0.075"
			size="${v.gamelistGrid.size}"
			margin="0.02 0.02"
			padding="0.02 0.02 0.02 0.02"
			autoLayout="${v.gridAutoLayout}"
			animateSelection="true"
			centerSelection="false"
			scrollbarColor="${c.textHeader}"
			scrollbarSize="${v.ScrollBar}"
			autoLayoutSelectedZoom="1.01"
			scrollbarAlignment="right"
			imageSource="thumbnail"
			scrollSound="./../parts/scroll.wav"

		/>

		<imagegrid ifSubset="slideType:horizontal" name="gamegrid"

			scrollDirection="horizontal"
			scrollbarSize="${v.ScrollBar2}"

		/>

		<imagegrid ifSubset="videoPreviews:enabled" name="gamegrid"

			showVideoAtDelay="500"

		/>

		<gridtile name="default"
		
			backgroundColor="00000000"
			backgroundEdgeColor="00000000"
			backgroundCenterColor="00000000"
			backgroundCornerSize="9 9"
			selectionMode="image"
			imageSizeMode="maxSize"
			padding="6 6"
			imageColor="ffffff"
			reflexion="0 0"
			
		/>

		<gridtile name="selected"
		
			backgroundCenterColor="${c.textHeader}"
			backgroundEdgeColor="${c.textHeader}"
			imageColor="ffffff"
			
		/>

		<text name="gridtile"
		
			fontPath="./../fonts/${f.def}"
			fontSize="0.034"
			color="${c.text}"
			extraTextColor="${c.textHeader}"
			alignment="center"
			singleLineScroll="true"
			autoScrollDelay="0"
			
		>

			<visible ifSubset="gridGameName:no">false</visible>

		</text>

		<text name="gridtile:selected"
		
			color="${c.textHeader}"
			
		>

			<visible ifSubset="gridGameName:no">false</visible>

		</text>

		<image name="gridtile.favorite"
		
			path="./../parts/favorite.png"
			pos="0 0"
			maxSize="0.2 0.2"
			origin="0.5 0.5"
			horizontalAlignment="left"
			verticalAlignment="top"
			
		/>

		<image name="gridtile.image"
		
			linearSmooth="true"
			roundCorners="0.02"
			
		/>  

		<ninepatch name="gridtile.background:selected"
		
			animateColor="${c.menuSelector}"
			animateColorTime="160"
		/>			
			
		<image name="md_kidgame,md_notkidgame"
		
			zIndex="900"
			linearSmooth="true"
			origin="0.5 0"
			pos="0.8799479166666667 0.333"
			path="./../parts/kid.svg"
			maxSize="0.12 0.28"
			color="${c.text}4d"
			opacity="1"
			visible="false"
			
		/>
			
		<image name="md_notkidgame"
		
			color="00000000"
			
		/>
		
		<image name="md_hidden"
		
			zIndex="1002"
			linearSmooth="true"
			origin="0.5 0"
			pos="0.964 0.899"
			path="./../parts/hidden.svg"
			maxSize="0.02 0.02"
			opacity="0.9"
					
		>
		
			<storyboard
				repeat="forever"
			>
				<animation property="opacity" from="0.1" to="0.9" duration="250" mode="easeInOut" autoreverse="true" />
			</storyboard>		

		</image>
		
	</view>

</theme>
